<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
 android:layout_width="fill_parent" android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.testlocationindipendent.MainActivity$PlaceholderFragment">

    <TextView
        android:text="Lettura accelerometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--style="@android:style/TextAppearance.Large"-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xAccelerometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:paddingRight="15dip"/>

         <TextView
             android:id="@+id/xAccelerometerWithAngle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="X Angolo: "/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yAccelerometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/yAccelerometerWithAngle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y Angolo: "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zAccelerometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/zAccelerometerWithAngle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z Angolo: "/>
    </LinearLayout>






    <TextView
        android:id="@+id/deltaTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delta tempo: "
        android:paddingRight="15dip"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="25dip"
        android:background="#C0C0C0"></LinearLayout>


    <TextView
        android:text="Vettore m e Vettore D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <!--style="@android:style/TextAppearance.Large"-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xm: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/xVettoreD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xd: "
            android:paddingRight="15dip"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ym: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/yVettoreD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yd: "
            android:paddingRight="15dip"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zm: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/zVettoreD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zd: "
            android:paddingRight="15dip"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/normaMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Norma m: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/normaVettoreD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Norma D: "/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="25dip"
        android:background="#C0C0C0"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vettore p Mizell" />
    <!--style="@android:style/TextAppearance.Large"-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pComponenteX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Px: "
            android:paddingRight="15dp"/>

        <TextView
            android:id="@+id/hComponenteX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hx: "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pComponenteY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Py: "
            android:paddingRight="15dp"/>

        <TextView
            android:id="@+id/hComponenteY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hy: "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pComponenteZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pz: "
            android:paddingRight="15dp"/>

        <TextView
            android:id="@+id/hComponenteZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hz: "/>
    </LinearLayout>



<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="2dip"
    android:layout_marginTop="25dip"
    android:background="#C0C0C0"></LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Vettore Linear Acceleration" />
    <!--style="@android:style/TextAppearance.Large"-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xLinearAcceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/xLinearWithAngle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X Angolo: "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yLinearAcceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/yLinearWithAngle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y Angolo: "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zLinearAcceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/zLinearWithAngle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z Angolo: "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/normaLinearAcceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Norma: "/>
    </LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="2dip"
    android:layout_marginTop="25dip"
    android:background="#C0C0C0"></LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Rotation Vector" />
    <!--style="@android:style/TextAppearance.Large"-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xRotationVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:paddingRight="15dip"/>

        <TextView
            android:id="@+id/alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpha: "/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yRotationVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: "
            android:paddingRight="15dip"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zRotationVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z: "
            android:paddingRight="15dip"/>


    </LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="2dip"
    android:layout_marginTop="25dip"
    android:background="#C0C0C0"></LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Start Recording"
    android:onClick="startRecording"/>

</LinearLayout>
</ScrollView>